# Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///attendance.db
# For PostgreSQL: postgresql://username:password@localhost/attendance_db
# For MySQL: mysql://username:password@localhost/attendance_db

# Development Database
DEV_DATABASE_URL=sqlite:///attendance_dev.db

# Email Configuration (for future notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.6
FACE_RECOGNITION_MODEL=hog

# QR Code Settings
QR_CODE_EXPIRY_MINUTES=30
QR_CODE_SIZE=10
QR_CODE_BORDER=4

# Analytics Settings
ATTENDANCE_THRESHOLD=75.0
RISK_STUDENT_THRESHOLD=60.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com


